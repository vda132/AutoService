             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.UserControllers" xmlns:viewmodel="clr-namespace:WpfApp1.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MasterViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid RenderTransformOrigin="0.515,0.505">
        <Button Content="Клиенты" Command="{Binding ClientButtonCommnad}"  HorizontalAlignment="Left" Margin="215,192,0,0" VerticalAlignment="Top" Height="73" Width="180"/>
